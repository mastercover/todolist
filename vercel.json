{
  "version": 2,
  "framework": "nextjs",

  "installCommand": "npm ci",
  "buildCommand": "next build",
  "devCommand": "next dev --turbo",

  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/api/proxy/:path*", "destination": "https://api.example.com/:path*" },
    { "source": "/docs", "destination": "/docs/index.html" }
  ],

  "redirects": [
    { "source": "/old", "destination": "/new", "permanent": true },
    { "source": "/legacy/:slug*", "destination": "/new/:slug*", "permanent": true }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "same-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "regions": ["sin1"],

  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10,
      "regions": ["sin1"]
    },
    "app/**/route.ts": {
      "runtime": "edge",
      "regions": ["sin1"]
    }
  },

  "crons": [
    {
      "path": "/api/jobs/daily",
      "schedule": "0 17 * * *"
    }
  ],

  "git": {
    "deploymentEnabled": {
      "main": true,
      "preview": true
    },
    "ignoreCommand": "git diff --quiet HEAD^ HEAD -- . ':(exclude)docs/**' ':(exclude)**/*.md'"
  },

  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://api.example.com"
  },
  "build": {
    "env": {
      "SENTRY_AUTH_TOKEN": "@sentry_auth_token"
    }
  },
  "preview": {
    "env": {
      "NEXT_PUBLIC_ENV": "preview"
    }
  },
  "production": {
    "env": {
      "NEXT_PUBLIC_ENV": "production"
    }
  }
}
